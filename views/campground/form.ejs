<% layout ('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">
        <%= campground?'Edit Campground':'New Campground' %>
    </h1>
    <div class="col-6 offset-md-3">
        <% if(campground){ %>
    <form action="/campgrounds/<%=campground._id%>/edit?_method=PUT" method="POST">
    <% } else { %>
    <form action="/campgrounds/new" method="POST">
    <% } %>
    
        <div class="mb-3">
            <label class="form-label" for="title">Title:</label>
            <input class="form-control" type="text" id="title" name="title" placeholder="<%= campground?"":'Add Title' %>"
                value="<%= campground?campground.title:'' %>">
        </div>

        <div class="mb-3">
            <label class="form-label" for="location">Location:</label>
            <input class="form-control" type="text" id="location" name="location" placeholder="<%= campground?"":'Add Location' %>"
                value="<%= campground?campground.location:'' %>">
        </div>

        <div class="mb-3">
            <label class="form-label" for="image">Image URL:</label>
            <input class="form-control" type="text" id="image" name="image" placeholder="<%= campground?"":'Add Image URL' %>"
                value="<%= campground?campground.image:'' %>">
        </div>

        <div class="mb-3">
            <label class="form-label" for="description">Description:</label>
            <input type="text" class="form-control" id="description" name="description"
                placeholder="<%= campground?"":'Campground description' %>"
                value="<%= campground?campground.description:'' %>">
        </div>
        <div class="mb-3"><button class="btn btn-success">Submit</button></div>
        <a href="/campgrounds" class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover">All Campgrounds</a>
    </form>
    </div>
    
    </div>