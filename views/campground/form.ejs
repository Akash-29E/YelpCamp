<% layout ('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">
            <%= campground?'Edit Campground':'New Campground' %>
        </h1>
        <div class="col-6 offset-md-3">
            <% if(campground){ %>
                <form action="/campgrounds/<%=campground._id%>/edit?_method=PUT" method="POST" class="needs-validation"
                    novalidate>
                    <% } else { %>
                        <form action="/campgrounds/new" method="POST" class="validated-form" novalidate>
                            <% } %>

                                <div class="mb-3">
                                    <label class="form-label" for="title">Title</label>
                                    <input class="form-control" type="text" id="title" name="campground[title]"
                                        placeholder="<%= campground?"":'Add Title' %>"
                                        value="<%= campground?campground.title:'' %>" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="location">Location</label>
                                    <input class="form-control" type="text" id="location" name="campground[location]"
                                        placeholder="<%= campground?"":'Add Location' %>"
                                        value="<%= campground?campground.location:'' %>" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label class="form-label" for="image">Image URL</label>
                                    <input class="form-control" type="text" id="image" name="campground[image]"
                                        placeholder="<%= campground?"":'Add Image URL' %>"
                                        value="<%= campground?campground.image:'' %>" required>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                </div>

                                <div class="mb-3">
                                    <label for="price" class="mb-2">Campground Price:</label>
                                    <div class="input-group">
                                        <span class="input-group-text">$</span>
                                        <input type="text" class="form-control" id="price" aria-label="Amount"
                                            placeholder="0" name="campground[price]" value="<%= campground?campground.price:'' %>"
                                            required>
                                        <div class="valid-feedback">
                                            Looks good!
                                        </div>
                                    </div>
                                </div>

                                <div class="form-floating mb-3">
                                    <textarea name="campground[description]" class="form-control"
                                        placeholder="<%= campground?"":'Enter your description here' %>"
                                        id="description" style="height: 150px"
                                        required><%= campground?campground.description:'' %></textarea>
                                    <div class="valid-feedback">
                                        Looks good!
                                    </div>
                                    <label for="description">Description</label>
                                </div>

                                <div class="mb-3"><button
                                        class="btn <%=campground?'btn-info text-light':'btn-success' %> ">
                                        <%= campground?'Update Campground':'Create Campground' %>
                                    </button></div>
                                <% if (campground){ %>
                                    <a href="/campgrounds/<%=campground._id%>"
                                        class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover">Back
                                        to Campground</a>
                                    <% } else {%>
                                        <a href="/campgrounds"
                                            class="link-underline link-underline-opacity-0 link-underline-opacity-75-hover">All
                                            Campgrounds</a>
                                        <% } %>
                        </form>
        </div>
    </div>